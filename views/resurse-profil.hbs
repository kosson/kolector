{{!< layout}}
{{> nav-resurse}}
{{> messages}}


    <input type="hidden" name="_csrf" value="{{this.csrfToken}}">
    {{#each styles}}
        <link rel="stylesheet" type="text/css" href="{{style}}">
    {{/each}}

    <h3>Resursele cu care ai contribuit</h3>
    <div id="resurseincred" class="resurse">
        {{#each resurse}}
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title">
                        <a class="btn btn-dark" href="{{this._id}}" class="">{{title}}</a>
                    </h5>                                   
                </div>
                {{!-- <img class="card-img-top" src="{{this.coperta}}" alt="{{this.title}}"> --}}

                {{!-- Dacă există copertă, afișeaz-o --}}
                {{#if this.coperta}}
                    <img src="{{this.coperta}}" class="coperta card-img-top" alt="{{this.title}}">
                    {{else}}
                    <div style="position: relative;">
                        <img src="/img/CREDlogo.jpg" alt="" width="100px" style="position: absolute; top: 5; left: 5">
                        <img data-src="holder.js/100px100&textmode=exact?auto=yes&text=RED" class="coperta card-img-top" alt="{{this.title}}">
                    </div>
                {{/if}}

                <div class="card-body">

                    <p class="card-text">{{this.description}}</p>
                    {{!-- <a href="/resursepublice/{{this.id}}" class="btn btn-primary">Afișează</a>    --}}
                </div>
                <div class="card-footer text-muted">
                    {{!-- {{this.date}} --}}
                    {{this.dataRo}}
                </div>
            </div>
        {{/each}}
    </div>

    {{!-- Adu-mi toate resursele utilizatorului --}}
    <div id="content">
        <h1>Acces la toate resursele:</h1>
        <section class="container-fluid" id="res-visuals">
            {{!-- Va încărca resursele compilate cu ajutorul template-ului --}}
            <div id="visuals" class="tableDisplay" data-usrid="{{this.user.id}}" >
                {{!-- Background video --}}
                <div class="bg-video">
                    <video class="bg-video__content" autoplay muted loop>
                        {{!-- https://coverr.co/videos/modem-lights-u4MPlcF4EE --}}
                        <source src="/img/coverr-typing-in-laptop-1578678668153.mp4" type="video/mp4">
                        Browserul tău nu are support pentru caracteristicile web moderne. Actualizează-l!
                    </video>
                </div>
            </div>
        </section>
    </div>
    
    {{!-- Tabelul resurselor personale --}}
    <template id="userResTbl" data-sort='[[ 0, "asc" ]]'>
        <div id="resurseTab" class=""></div>
    </template>

    {{#each scripts}}
        <script type="application/javascript" src="{{script}}"></script>
    {{/each}}
