{{!< k1/layout}}
{{> nav-resurse}}
{{!-- {{> messages}} --}}

    <input type="hidden" name="_csrf" value="{{this.csrfToken}}">

    {{!-- {{#each styles}}
        <link rel="stylesheet" type="text/css" href="/{{template}}{{style}}">
    {{/each}} --}}

    <h3>Cele mai noi resurse</h3>
    <div id="resurseincred" class="units container">
        {{!-- Randează ultimele 9 resurse create --}}
        {{#each resurse}}
            <div class="unit">
                <div class="unit-header">
                    <h3 class="unit-title">
                        <a href="/profile/{{this._id}}" maxlength="4">{{this.title}}</a>
                    </h3>
                    <div class="row mb-2 text-muted">
                        <p class="card-subtitle col-sm-6 text-muted">{{this.autori}}</p>
                        <p class="card-subtitle col-sm-6 text-muted">{{this.dataRo}}</p>
                    </div>
                </div>
                {{!-- <img class="card-img-top" src="{{this.coperta}}" alt="{{this.title}}"> --}}
                <div class="unit-body">
                    <main class="unit-description">
                        <aside>
                            {{!-- Dacă există copertă, afișeaz-o --}}
                            {{#if this.coperta}}
                                <div><img src="{{this.coperta}}" class="unit-img-top" alt="{{this.title}}"></div>
                            {{else}}
                                <div class="unit-default-visual">
                                    <img class="unit-default-visual-logo" src="/{{logo}}" alt="logo">
                                    <img src="/{{template}}/img/black-1072366_1920.jpg" class="" alt="{{this.title}}">
                                </div>
                                <div class="unit-grading">{{{this.ratingrepresentation}}}</div>
                                {{!-- <div class="unit-grading"><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-fill"></i><i class="bi bi-star-half"></i><i class="bi bi-star"></i></div> --}}
                            {{/if}}
                        </aside>
                        <p>{{this.description}}</p>
                    </main>  
                </div>
                <div class="unit-footer">
                    {{#each this.etichete}}
                        <a href="/tag/{{this}}">
                            <span class="badge badge-info">{{this}}</span>
                        </a>
                    {{/each}}
                </div>
            </div>
        {{/each}}
    </div>

    {{!-- Adu-mi toate resursele utilizatorului --}}
    <div id="content">
        <h1>Acces la toate resursele:</h1>
        <section class="container-fluid" id="res-visuals">
            {{!-- Va încărca resursele compilate cu ajutorul template-ului --}}
            <div id="visuals" class="tableDisplay" data-usrid="{{this.user.id}}"></div>
        </section>
    </div>
    
    {{!-- Tabelul resurselor personale --}}
    <template id="userResTbl" data-sort='[[ 0, "asc" ]]'>
        <div id="resurseTab" class=""></div>
    </template>

    {{#each scripts}}
        <script type="application/javascript" src="/{{template}}{{script}}"></script>
    {{/each}}
