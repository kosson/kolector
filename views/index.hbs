    <div id="resurse" class="resurse os-animation" data-animation="fadeInUp">
        <div class="resurse">
            {{!-- Background video --}}
            <div class="bg-video">
                <video class="bg-video__content" autoplay muted loop>
                    {{!-- https://coverr.co/videos/modem-lights-u4MPlcF4EE --}}
                    <source src="img/Modem-lights.mp4" type="video/mp4">
                    <source src="img/Modem-lights.webm" type="video/webm">
                    Browserul tău nu are support pentru caracteristicile web moderne. Actualizează-l!
                </video>
            </div>

            {{!-- Randează resursele în landing --}}
            {{#each resurse}}
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">
                            <a class="" href="/resursepublice/{{this._id}}" class="">{{this.title}}</a>
                        </h5>
                        <h6 class="card-subtitle mb-2">{{this.autori}}</h6>
                        <span class="text-muted">{{this.dataRo}}</span>                                   
                    </div>

                    {{!-- Dacă există copertă, afișeaz-o --}}
                    {{#if this.coperta}}
                        <img src="{{this.coperta}}" class="coperta card-img-top" alt="{{this.title}}">
                        {{else}}
                        <div style="position: relative;">
                            <img src="/img/CREDlogo.jpg" alt="" width="100px" style="position: absolute; top: 5; left: 5">
                            <img data-src="holder.js/100px100&textmode=exact?auto=yes&text=RED" class="card-img-top">
                        </div>
                    {{/if}}
                    
                    <div class="card-body">
                        <p class="card-text">{{this.description}}</p>
                        {{!-- <a href="/resursepublice/{{this.id}}" class="btn btn-primary">Afișează</a>    --}}
                    </div>

                    <div class="card-footer text-muted">
                        {{#each this.etichete}}
                            <a href="/tag/{{this}}">
                                <span class="badge badge-info">{{this}}</span>
                            </a>
                        {{/each}}
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</div>

