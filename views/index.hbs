    </div>
</a>
{{!-- <div class="container"> --}}
    {{!-- {{> mainInfo}} --}}
<div class="offset">
    <div class="os-animation narrow text-center" data-animation="fadeInUp">
        <h3 class="heading">
            Ultimele resurse disponibile public
        </h3>
    </div>
    <div id="" class="resurse os-animation" data-animation="fadeInUp">
        <div class="container">
            <div class="row">
                <div class="card-deck">
                    {{#each resurse}}
                        <div class="col-sm-4 d-flex align-items-stretch">
                            <div class="card ml-2 mh-100">
                                <img class="card-img-top" src="{{this.coperta}}" alt="{{this.title}}">
                                <div class="card-body">
                                    <h5 class="card-title">{{this.title}}</h5>
                                    <p class="card-text">{{this.description}}</p>
                                    <a href="/resursepublice/{{this.id}}" class="btn btn-primary">Afișează</a>     
                                </div>
                            </div>
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
</div>