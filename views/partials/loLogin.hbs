{{> nav-landing}}
<div id="localogin" class="container">
    {{!-- <h2>{{errorMessage}}</h2>     --}}
    {{!-- AFIȘEAZĂ UN MODAL --}}
    <div id="authblock" class="d-flex justify-content-center row">
        
        <div class="col-md-8 justify-content-center">
            <form action="/login" method="post">
                <input type="hidden" name="_csrf" value="{{csrfToken}}">
                {{#if errorMessage}}
                    <p class="errfrm">{{errorMessage}}</p>
                {{/if}}
                <h3 class="h3 mb-3 font-weight-normal">Dacă ai cont local</h1>
                <label for="inputEmail" class="sr-only">Adresa email</label>
                <input type="email" name="username" id="inputEmail" class="form-control" placeholder="Email address" autocomplete="off" required>
                <label for="inputPassword" class="sr-only">Parola</label>
                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" autocomplete="off" required>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Login</button>
                <p>Vrei să-ți faci cont?
                    <a href="/signup">Înscrie-te!</a>
                </p>
            </form>
        </div>

        <div class="form-signin d-flex flex-column">
            <div class="d-flex justify-content-center">
                <h3>Autentifică-te folosind cont de Google.</h3>
            </div>
            <div class="d-flex justify-content-center">
                <a href="/auth/google">
                    {{!-- <img src="{{logoimg}}" width="150px" alt="logo-ul"> --}}
                    <img src="{{template}}/img/Google-logo.png" width="150px" alt="logo-ul google">
                </a>
            </div>
        </div>
    </div>
</div>